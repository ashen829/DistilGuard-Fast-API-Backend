'use client'

import { useEffect, useState, useCallback } from 'react'

interface S3Event {
  type: string
  event_id: string
  bucket: string
  key: string
  timestamp: string
  size?: number
  content_type?: string
  data?: any
}

interface Props {
  websocketUrl?: string
}

export default function S3EventMonitor({ 
  websocketUrl = 'ws://localhost:8000/ws' 
}: Props) {
  const [events, setEvents] = useState<S3Event[]>([])
  const [connectionStatus, setConnectionStatus] = useState<'connected' | 'disconnected' | 'connecting'>('disconnected')
  const [ws, setWs] = useState<WebSocket | null>(null)

  const connect = useCallback(() => {
    if (ws?.readyState === WebSocket.OPEN) return

    setConnectionStatus('connecting')
    const websocket = new WebSocket(websocketUrl)

    websocket.onopen = () => {
      console.log('WebSocket connected')
      setConnectionStatus('connected')
    }

    websocket.onmessage = (event) => {
      try {
        const data = JSON.parse(event.data) as S3Event
        console.log('Received event:', data)
        
        if (data.type === 'new_upload') {
          setEvents(prev => [data, ...prev].slice(0, 50)) // Keep last 50 events
        }
      } catch (error) {
        console.error('Error parsing WebSocket message:', error)
      }
    }

    websocket.onerror = (error) => {
      console.error('WebSocket error:', error)
    }

    websocket.onclose = () => {
      console.log('WebSocket disconnected')
      setConnectionStatus('disconnected')
      setWs(null)
      
      // Auto-reconnect after 5 seconds
      setTimeout(connect, 5000)
    }

    setWs(websocket)
  }, [websocketUrl, ws])

  useEffect(() => {
    connect()
    
    return () => {
      if (ws) {
        ws.close()
      }
    }
  }, []) // Only run once on mount

  const getStatusColor = () => {
    switch (connectionStatus) {
      case 'connected': return 'bg-green-500'
      case 'connecting': return 'bg-yellow-500'
      case 'disconnected': return 'bg-red-500'
    }
  }

  const formatBytes = (bytes?: number) => {
    if (!bytes) return 'Unknown'
    return (bytes / 1024).toFixed(2) + ' KB'
  }

  const formatTime = (timestamp: string) => {
    return new Date(timestamp).toLocaleTimeString()
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-purple-600 to-indigo-700 p-6">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <div className="bg-white rounded-lg shadow-xl p-6 mb-6">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-3xl font-bold text-gray-900">S3 Event Monitor</h1>
              <p className="text-gray-600 mt-2">Real-time S3 upload notifications</p>
            </div>
            <div className="flex items-center gap-3">
              <div className={`w-3 h-3 rounded-full ${getStatusColor()} animate-pulse`} />
              <span className="text-sm font-medium text-gray-700 capitalize">
                {connectionStatus}
              </span>
            </div>
          </div>
        </div>

        {/* Stats */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <div className="bg-white rounded-lg shadow-md p-6">
            <div className="text-4xl font-bold text-purple-600">{events.length}</div>
            <div className="text-gray-600 text-sm uppercase tracking-wide mt-2">
              Total Events
            </div>
          </div>
          <div className="bg-white rounded-lg shadow-md p-6">
            <div className="text-4xl font-bold text-purple-600">
              {events.filter(e => e.type === 'new_upload').length}
            </div>
            <div className="text-gray-600 text-sm uppercase tracking-wide mt-2">
              Files Uploaded
            </div>
          </div>
          <div className="bg-white rounded-lg shadow-md p-6">
            <div className="text-4xl font-bold text-purple-600">
              {formatBytes(events.reduce((sum, e) => sum + (e.size || 0), 0))}
            </div>
            <div className="text-gray-600 text-sm uppercase tracking-wide mt-2">
              Total Size
            </div>
          </div>
        </div>

        {/* Events List */}
        <div className="bg-white rounded-lg shadow-xl p-6">
          <h2 className="text-xl font-bold text-gray-900 mb-4">Recent Uploads</h2>
          
          {events.length === 0 ? (
            <div className="text-center py-12 text-gray-500">
              <svg className="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
              </svg>
              <p className="mt-4">No events yet. Upload a file to S3 to see it here!</p>
            </div>
          ) : (
            <div className="space-y-4">
              {events.map((event) => (
                <div 
                  key={event.event_id} 
                  className="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow bg-gradient-to-r from-purple-50 to-indigo-50"
                >
                  <div className="flex justify-between items-start mb-2">
                    <div className="flex items-center gap-2">
                      <span className="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                        {event.type}
                      </span>
                    </div>
                    <span className="text-sm text-gray-500">
                      {formatTime(event.timestamp)}
                    </span>
                  </div>
                  
                  <div className="space-y-1 text-sm">
                    <div className="flex">
                      <span className="font-semibold text-gray-700 w-24">Bucket:</span>
                      <span className="text-gray-900">{event.bucket}</span>
                    </div>
                    <div className="flex">
                      <span className="font-semibold text-gray-700 w-24">Key:</span>
                      <span className="text-gray-900 truncate">{event.key}</span>
                    </div>
                    <div className="flex">
                      <span className="font-semibold text-gray-700 w-24">Size:</span>
                      <span className="text-gray-900">{formatBytes(event.size)}</span>
                    </div>
                    {event.content_type && (
                      <div className="flex">
                        <span className="font-semibold text-gray-700 w-24">Type:</span>
                        <span className="text-gray-900">{event.content_type}</span>
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  )
}

